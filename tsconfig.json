{   
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": false,
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "es2018"
        ]
        // "downlevelIteration": true,
    },
    "include": [
        "./src/**/*.ts",
    ]
}